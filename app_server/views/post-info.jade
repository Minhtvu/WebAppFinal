extends layout

block content
  .row.page-header: .col-lg-12
      h1= posting.title
      if account
          h4.ml-auto= account.username
        else
          h4.ml-auto Not logged in
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p Description: #{posting.description}
          p Deadline: #{posting.deadline}
          p Offering: #{posting.userOffering} 
          h2.panel-title Comments
          .card.card-primary
          each comment in posting.comments
            .card.card-header.bg-primary
              h5 Username: #{comment.username}
            .card.card-body
              p Comment: #{comment.comment}
   .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="", method="post", role="form")
        .form-group
          label.col-sm-2.control-label(for="comment") Comment:
          .col-sm-10
            textarea#description.form-control(name="comment", rows="5")
        button.btn.btn-default.pull-right Add Comment
    .col-xs-12.col-md-4
          