extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/course", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Post Title
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="date") Date
          .col-xs-12.col-sm-10
            input#name.form-control(name="date")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="status") Status
          .col-xs-12.col-sm-2
            select#st.form-control.input-sm(name="status")
              option Not Started
              option In Progress
              option Done
              option Submitted
        .form-group
          label.col-sm-2.control-label(for="description") Description
          .col-sm-10
            textarea#description.form-control(name="description", rows="5")
        button.btn.btn-default.pull-right Add Post
    .col-xs-12.col-md-4
